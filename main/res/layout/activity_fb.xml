<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Facebook Posting"
        app:fontFamily="@font/tempo_std"
        android:layout_centerHorizontal="true"
        android:textAllCaps="true"
        android:layout_alignParentTop="true"
        android:textSize="32sp"
        android:id="@+id/tv_header1"
        android:layout_marginTop="32dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Application"
        app:fontFamily="@font/tempo_std"
        android:textAllCaps="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_header1"
        android:textSize="32sp"
        android:id="@+id/tv_header2"
        android:layout_marginTop="4dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/tv_header2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "CHOOSE"
            android:layout_marginRight="8dp"
            android:textAllCaps="true"
            app:fontFamily="@font/tempo_std"
            android:textSize="60sp"
            android:textColor="#10559a"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Fun"
            android:textAllCaps="true"
            app:fontFamily="@font/tempo_std"
            android:textSize="60sp"
            android:textColor="#dc1125"/>
    </LinearLayout>



    <com.facebook.login.widget.LoginButton
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text = "Post Permission"
        android:layout_centerInParent="true"
        android:id="@+id/btn_login"
        android:layout_above="@id/btn_logout"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text = "Logout of Facebook"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:id="@+id/btn_logout"
        android:layout_above="@id/btn_post"
        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text = "Post Sample post to Facebook"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_post"
        />

</RelativeLayout>